{
	"name": "starterkit",
	"version": "1.0.0",
	"description": "Custom WordPress theme starter kit",
	"author": "Double-E Design",
	"engines": {
		"node": "^14.21.3"
	},
	"main": "index.js",
	"type": "module",
	"scripts": {
		"lint": "yarn lint:php & yarn lint:css & yarn lint:js",
		"lint:php": "phplint '**/*.php' '!node_modules/**'",
		"lint:css": "stylelint scss/**/*.scss",
		"lint:css:fix": "stylelint scss/**/*.scss --fix",
		"lint:js": "eslint js/*.js",
		"lint:js:fix": "eslint --fix js/*.js",
		"commit": "yarn lint-staged && yarn cz"
	},
	"lint-staged": {
		"**/*.php' '!node_modules/**'": [
			"phplint"
		],
		"js/*.js": [
			"eslint"
		],
		"scss/**/*.scss": [
			"stylelint --fix"
		]
	},
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@doubleedesign/animate-into-view": "^1.0.0",
		"@doubleedesign/hover.css": "https://github.com/doubleedesign/Hover.css#1.0.1",
		"@wordpress/eslint-plugin": "^14.1.0",
		"@wordpress/stylelint-config": "^20.0.2",
		"browser-sync": "^2.28.3",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.18.0",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^2.0.0",
		"gulp-rollup-2": "^1.3.1",
		"gulp-sass": "^5.1.0",
		"gulp-sass-glob": "^1.1.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uglify": "^3.0.2",
		"lint-staged": "^13.2.0",
		"phplint": "^2.0.5",
		"sass": "^1.59.3",
		"stylelint": "^15.2.0",
		"stylelint-scss": "^4.5.0"
	},
	"config": {
		"commitizen": {
			"path": "./app/public/wp-content/themes/starterkit/node_modules/cz-conventional-changelog"
		}
	}
}
